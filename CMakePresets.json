{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "E:/WorkSpace/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build without editor",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PHOENIX_BUILD_EDITOR": "OFF"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build without editor",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PHOENIX_BUILD_EDITOR": "OFF"
      }
    },
    {
      "name": "editor-debug",
      "displayName": "Editor (Debug)",
      "description": "Debug build with Qt/QML editor",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/build/editor-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PHOENIX_BUILD_EDITOR": "ON",
        "CMAKE_PREFIX_PATH": "D:/Programs/Qt/6.6.1/msvc2019_64"
      }
    },
    {
      "name": "editor-release",
      "displayName": "Editor (Release)",
      "description": "Release build with Qt/QML editor",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/build/editor-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PHOENIX_BUILD_EDITOR": "ON",
        "CMAKE_PREFIX_PATH": "D:/Programs/Qt/6.6.1/msvc2019_64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "configurePreset": "debug",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "displayName": "Release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "editor-debug",
      "displayName": "Editor (Debug)",
      "configurePreset": "editor-debug",
      "configuration": "Debug"
    },
    {
      "name": "editor-release",
      "displayName": "Editor (Release)",
      "configurePreset": "editor-release",
      "configuration": "Release"
    }
  ]
}

